<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dadwonkulahjr</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mypersonalwebsite.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" type="image/jpg" href="~/images/tuse_graduation.jpg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-dark fixed-top" data-bs-theme="dark">
        <div class="container">
            <a class="navbar-brand text-white" asp-action="index" asp-controller="home">
                <img class="img-fluid rounded-circle"
                     src="~/images/Iam_Tuse.jpg"
                     alt="dadwonkulahjr"
                     style="vertical-align:top;width:35px" />
                dadwonkulahjr&#128187;
            </a>
            <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav ms-auto">
                    <li class="@(ViewContext.RouteData.Values["action"].ToString().Equals("Index") ? "active" : "")">
                        <a href="@Url.ActionLink("Index", "Home")" class="nav-link text-white">Home</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["action"].ToString().Equals("ContactMe") ? "active" : "")">
                        <a href="@Url.ActionLink("ContactMe", "Home")" class="nav-link text-white">Contact Me</a>
                    </li>

                    <li class="@(ViewContext.RouteData.Values ["action"].ToString().Equals("AboutMe") ? "active" : "")">
                        <a href="@Url.ActionLink("AboutMe", "Home")" class="nav-link text-white">About Me</a>
                    </li>

                </ul>

            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white bg-dark">
        <div class="container-fluid text-center">
            <div style="width:100%;">
                <div class="w-auto">
                    COPYRIGHT &copy; @DateTime.Now.Year | All rights reserved dadwonkulahjr&#128187;&#128522;
                </div>
                <div>
                    <ul class="socialMediaContactLinksList">
                        <li><a href="https://github.com/dadwonkulahjr"><i class="bi bi-github" style="font-size:50px;"></i></a></li>
                        <li><a href="https://www.linkedin.com/in/dad-s-wonkulah-jr-31a2a5182/"><i class="bi bi-linkedin" style="font-size:50px;"></i></a></li>

                    </ul>
                </div>


            </div>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
